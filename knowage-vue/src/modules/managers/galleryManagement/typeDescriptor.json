{
  "allowedEditors": {
    "html": ["html", "css"],
    "python": ["html", "python", "css"],
    "chart": ["html", "javascript", "css"]
  },
  "editor": {
    "html": {
      "name": "htmlCodemirror",
      "icon": "fab fa-html5"
    },
    "javascript": {
      "name": "javascriptCodemirror",
      "icon": "fab fa-js-square"
    },
    "python": {
      "name": "pythonCodemirror",
      "icon": "fab fa-python"
    },
    "css": {
      "name": "cssCodemirror",
      "icon": "fab fa-css3"
    }
  },
  "options": {
    "html": {
      "tabSize": 4,
      "mode": "xml",
      "theme": "monokai",
      "lineNumbers": true,
      "line": false,
      "cursor": true
    },
    "javascript": {
      "tabSize": 4,
      "mode": "javascript",
      "theme": "monokai",
      "lineNumbers": true,
      "line": false,
      "cursor": true
    },
    "python": {
      "tabSize": 4,
      "mode": "text/x-python",
      "theme": "monokai",
      "lineNumbers": true,
      "line": false,
      "cursor": true
    },
    "css": {
      "tabSize": 4,
      "mode": "css",
      "theme": "monokai",
      "lineNumbers": true,
      "line": false,
      "cursor": true
    }
  },
  "iconTypesMap": {
    "chart": { "className": "fab fa-js-square", "style": { "background-color": "#ffc107", "color": "white" } },
    "html": { "className": "fab fa-html5", "style": { "background-color": "#c2185b", "color": "white" } },
    "python": { "className": "fab fa-python", "style": { "background-color": "#4caf50", "color": "white" } }
  }
}
