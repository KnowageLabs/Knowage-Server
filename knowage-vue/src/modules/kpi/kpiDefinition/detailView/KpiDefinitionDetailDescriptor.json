{
    "card": {
        "style": {
            "margin-bottom": "2em",
            "width": "100%"
        }
    },
    "column": {
        "header": {
            "style": {
                "display": "flex",
                "flex-direction": "column"
            }
        },
        "style": {
            "width": "50%"
        }
    },
    "filterFields": ["alias", "name"],
    "operation": {
        "insert": {
            "toastTitle": "common.toast.createTitle"
        },
        "success": "common.toast.success",
        "update": {
            "toastTitle": "common.toast.updateTitle"
        }
    },
    "pField": {
        "style": {
            "margin-bottom": "40px"
        }
    },
    "validations": {
        "kpi": [
            {
                "fieldName": "name",
                "validators": [
                    {
                        "key": "required"
                    },
                    {
                        "key": "regex",
                        "validator": {
                            "type": "extendedAlphanumericRegex"
                        }
                    }
                ]
            },
            {
                "fieldName": "description",
                "validators": [
                    {
                        "key": "regex",
                        "validator": {
                            "type": "extendedAlphanumericRegex"
                        }
                    }
                ]
            }
        ]
    }
}
