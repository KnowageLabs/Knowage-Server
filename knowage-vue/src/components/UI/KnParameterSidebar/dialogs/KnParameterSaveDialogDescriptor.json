{
    "descriptionMaxLength": 160,
    "dialog": {
        "style": {
            "width": "40vw"
        }
    },
    "nameMaxLength": 40,
    "scopeOptions": ["PUBLIC", "PRIVATE"],
    "validations": {
        "viewpoint": [
            {
                "fieldName": "NAME",
                "validators": [
                    {
                        "key": "required"
                    },
                    {
                        "key": "regex",
                        "validator": {
                            "type": "extendedAlphanumericRegex"
                        }
                    }
                ]
            },
            {
                "fieldName": "DESCRIPTION",
                "validators": [
                    {
                        "key": "required"
                    },
                    {
                        "key": "regex",
                        "validator": {
                            "type": "extendedAlphanumericRegex"
                        }
                    }
                ]
            },
            {
                "fieldName": "SCOPE",
                "validators": [
                    {
                        "key": "required"
                    }
                ]
            }
        ]
    }
}
