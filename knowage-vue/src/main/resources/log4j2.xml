<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%u{RANDOM}] %5p [%t] [%c.%M:%L] [%X{correlationId}] [%X{tenant}]%n%message%n%xThrowable</Pattern>
			</PatternLayout>
		</Console>
		<Routing name="KNOWAGE_VUE">
			<Routes pattern="$${ctx:tenant:-global}">
				<Route>
					<RollingFile
						name="KNOWAGE_VUE_${route}"
						append="true"
						fileName="${sys:catalina.base}/logs/${route}/knowageVue-${route}.${date:yyyy-MM-dd}-%i.log"
						filePattern="${sys:catalina.base}/logs/${route}/knowageVue-${route}.${date:yyyy-MM-dd}-%i.log"
						ignoreExceptions="false"
						createOnDemand="true">
						<PatternLayout>
							<Pattern>%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%u{RANDOM}] %5p [%t] [%c.%M:%L] [%X{correlationId}] [%X{environment}] [%X{tenant}]%n%message%n%xThrowable</Pattern>
						</PatternLayout>
						<Policies>
							<SizeBasedTriggeringPolicy size="5000KB" />
						</Policies>
						<DefaultRolloverStrategy max="3" />
					</RollingFile>
				</Route>
			</Routes>
		</Routing>
	</Appenders>
	<Loggers>
		<Root level="WARN">
			<AppenderRef ref="KNOWAGE_VUE" />
		</Root>
	</Loggers>
</Configuration>