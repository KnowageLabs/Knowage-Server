<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%u{TIME}] %5p [%t] [%c.%M:%L] [%mdc{correlationId}] [%mdc{tenant}]%n%message%n%xThrowable</Pattern>
			</PatternLayout>
		</Console>
		<RollingFile
				name="FILE"
				fileName="${sys:catalina.base}/logs/knowageQbeEngine.log"
				append="true"
				filePattern="${sys:catalina.base}/logs/knowageQbeEngine-%i.log"
				ignoreExceptions="false"
				createOnDemand="true">
			<PatternLayout>
				<Pattern>%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%u{TIME}] %5p [%t] [%c.%M:%L] [%mdc{correlationId}] [%mdc{tenant}]%n%message%n%xThrowable</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="10000KB" />
			</Policies>
			<DefaultRolloverStrategy max="3" />
		</RollingFile>
		<RollingFile
				name="FILE_AUDIT"
				fileName="${sys:catalina.base}/logs/knowageQbeEngineAudit.log"
				append="true"
				filePattern="${sys:catalina.base}/logs/knowageQbeEngineAudit-%i.log"
				ignoreExceptions="false"
				createOnDemand="true">
			<PatternLayout>
				<Pattern>%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%u{TIME}] %5p [%t] [%c.%M:%L] [%mdc{correlationId}] [%mdc{tenant}]%n%message%n%xThrowable</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="10000KB" />
			</Policies>
			<DefaultRolloverStrategy max="3" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<logger name="audit" additivity="false" level="INFO">
			<AppenderRef ref="FILE_AUDIT" />
		</logger>
		<logger name="edu.yale" additivity="false" level="DEBUG">
			<AppenderRef ref="FILE" />
		</logger>
		<logger name="it.eng.qbe" additivity="false" level="ERROR">
			<AppenderRef ref="FILE" />
			<AppenderRef ref="CONSOLE" />
		</logger>
		<logger name="it.eng.qbe.datasource.jpa.audit.JPAPersistenceManagerAuditLogger" additivity="false" level="INFO">
			<AppenderRef ref="FILE_AUDIT" />
		</logger>
		<logger name="it.eng.spagobi" additivity="false" level="ERROR">
			<AppenderRef ref="FILE" />
			<AppenderRef ref="CONSOLE" />
		</logger>
		<logger name="it.eng.spagobi.commons.utilities.messages" additivity="false" level="ERROR">
			<AppenderRef ref="FILE" />
		</logger>
		<logger name="it.eng.spagobi.commons.utilities.urls.WebUrlBuilder" additivity="false" level="ERROR">
			<AppenderRef ref="FILE" />
		</logger>
		<logger name="it.eng.spagobi.engines.qbe" additivity="false" level="ERROR">
			<AppenderRef ref="FILE" />
			<AppenderRef ref="CONSOLE" />
		</logger>
		<logger name="Spago" additivity="false" level="ERROR">
			<AppenderRef ref="FILE" />
		</logger>
		<Root level="ERROR">
			<AppenderRef ref="FILE" />
		</Root>
	</Loggers>
</Configuration>