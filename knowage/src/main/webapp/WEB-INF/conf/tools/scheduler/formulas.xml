<?xml version="1.0" encoding="UTF-8"?>
<FORMULAS>
	<FORMULA name="getCurrentDayOfTheMonth" description="#scheduler.formulas.getCurrentDayOfTheMonth">
	<![CDATA[
	int day = java.time.ZonedDateTime.now().getDayOfMonth();
	String dayStr = day.toString();
	return dayStr;
	]]>
	</FORMULA>
	<FORMULA name="getCurrentMonthOfTheYear" description="#scheduler.formulas.getCurrentMonthOfTheYear">
	<![CDATA[
	int month = java.time.ZonedDateTime.now().getMonth().getValue();
	String monthStr = month.toString();
	return monthStr;
	]]>
	</FORMULA>
	<FORMULA name="getCurrentYear" description="#scheduler.formulas.getCurrentYear">
	<![CDATA[
	int year = java.time.ZonedDateTime.now().getYear();
	String yearStr = year.toString();
	return yearStr;
	]]>
	</FORMULA>






	<FORMULA name="getCurrentDate" description="#scheduler.formulas.getCurrentDate">
	<![CDATA[
	String DATE_FORMAT = "dd/MM/yyyy";
	return java.time.ZonedDateTime.now().format(java.time.format.DateTimeFormatter.ofPattern(DATE_FORMAT));
	]]>
	</FORMULA>
