<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>it.eng.knowage</groupId>
		<artifactId>knowage-ce-parent</artifactId>
		<version>8.1.0-SNAPSHOT</version>
		<relativePath>../knowage-ce-parent/pom.xml</relativePath>
	</parent>

	<artifactId>knowage</artifactId>
	<packaging>war</packaging>
	<name>knowage</name>

	<build>
		<finalName>knowage</finalName>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-war-plugin</artifactId>
					<configuration>
						<attachClasses>true</attachClasses>
						<classesClassifier>classes</classesClassifier>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.codehaus.cargo</groupId>
					<artifactId>cargo-maven2-plugin</artifactId>
					<version>1.6.9</version>
					<configuration>
						<container>
							<containerId>tomcat8x</containerId>
							<type>installed</type>
							<home>${application-home}</home>
						</container>
						<configuration>
							<type>existing</type>
							<home>${application-home}</home>
						</configuration>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.6.0</version>
				<executions>
					<execution>
						<id>npm-update-version</id>
						<phase>process-sources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>npm</executable>
							<arguments>
								<argument>version</argument>
								<argument>${project.version}</argument>
								<argument>--allow-same-version</argument>
							</arguments>
							<workingDirectory>${basedir}/src/main/webapp</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>npm-package-install</id>
						<phase>process-sources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>npm</executable>
							<arguments>
								<argument>install</argument>
							</arguments>
							<workingDirectory>${basedir}/src/main/webapp</workingDirectory>
						</configuration>
					</execution>
					<execution>
						<id>grunt-concat-dist</id>
						<phase>process-resources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>grunt</executable>
							<arguments>
								<argument>knowage-concat</argument>
							</arguments>
							<workingDirectory>${basedir}/src/main/webapp</workingDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<!-- this profile is active by default -->
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<application.environment>development</application.environment>
			</properties>
			<build>
				<pluginManagement>
					<plugins>

					</plugins>
				</pluginManagement>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
		</profile>

		<profile>
			<id>production</id>
			<properties>
				<application.environment>production</application.environment>
				<disable.console.logging>*/console.log = function() {}; console.warn
					= function() {}; console.debug = function() {}; console.info =
					function() {}; /*</disable.console.logging>
			</properties>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-war-plugin</artifactId>
							<configuration>
								<warSourceExcludes>js/src/**,themes/commons/css/**</warSourceExcludes>
								<webResources>
									<resource>
										<directory>src/main/webapp</directory>
										<filtering>true</filtering>
										<includes>
											<include>**/angularImport.jsp</include>
										</includes>
									</resource>
									<resource>
										<directory>src/main/webapp/js/src</directory>
										<targetPath>js/src-${project.version}</targetPath>
									</resource>
									<resource>
										<directory>src/main/webapp/themes/commons/css</directory>
										<targetPath>themes/commons/css-${project.version}</targetPath>
									</resource>
								</webResources>
							</configuration>
						</plugin>

						<plugin>
							<groupId>org.codehaus.cargo</groupId>
							<artifactId>cargo-maven2-plugin</artifactId>
							<version>1.6.9</version>
							<configuration>
								<container>
									<containerId>tomcat8x</containerId>
									<type>installed</type>
									<home>${application-home}</home>
								</container>
								<configuration>
									<type>existing</type>
									<home>${application-home}</home>
								</configuration>
							</configuration>
						</plugin>

						<plugin>
							<groupId>org.codehaus.mojo</groupId>
							<artifactId>exec-maven-plugin</artifactId>
							<version>1.6.0</version>
							<executions>
								<execution>
									<id>npm-package-install</id>
									<phase>prepare-package</phase>
									<goals>
										<goal>exec</goal>
									</goals>
								</execution>
							</executions>
							<configuration>
								<executable>npm</executable>
								<arguments>
									<argument>install</argument>
								</arguments>
								<workingDirectory>${basedir}/src/main/webapp</workingDirectory>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
			</build>
		</profile>

		<profile>
			<id>hsql</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.7</version>
						<configuration>
							<encoding>UTF-8</encoding>
						</configuration>
						<executions>
							<execution>
								<id>copy-hibernate</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>src-${project.version}/main/resources</outputDirectory>
									<resources>
										<resource>
											<directory>src-${project.version}/main/resources/hsql</directory>
											<includes>
												<include>hibernate.cfg.xml</include>
												<include>quartz.properties</include>
												<include>hazelcast.xml</include>
											</includes>
										</resource>
									</resources>
									<overwrite>true</overwrite>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

