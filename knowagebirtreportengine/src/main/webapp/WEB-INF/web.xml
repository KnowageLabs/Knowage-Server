	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/html/error.html</location>
	</error-page>

	<jsp-config>
		<taglib>
			<taglib-uri>/birt.tld</taglib-uri>
			<taglib-location>/WEB-INF/tlds/birt.tld</taglib-location>
		</taglib>
	</jsp-config>

