	<!--   WAR CREATION FOR SINGLE PACKAGES                                                         -->
	<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<target name="create-bin.war" depends="init,jar">

