<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%u{RANDOM}] %5p [%t] [%c.%M:%L] [%X{correlationId}] [%X{environment}] [%X{tenant}]%n%message%n%xThrowable</Pattern>
			</PatternLayout>
		</Console>
		<RollingFile
				name="KNOWAGE_META"
				fileName="${sys:catalina.base}/logs/knowageMeta.log"
				append="true"
				filePattern="${sys:catalina.base}/logs/knowageMeta-%i.log"
				ignoreExceptions="false"
				createOnDemand="true">
			<PatternLayout>
				<Pattern>%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%u{RANDOM}] %5p [%t] [%c.%M:%L] [%X{correlationId}] [%X{environment}] [%X{tenant}]%n%message%n%xThrowable</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="5000KB" />
			</Policies>
			<DefaultRolloverStrategy max="3" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<logger name="edu.yale" additivity="false" level="error">
			<AppenderRef ref="KNOWAGE_META" />
		</logger>
		<logger name="it.eng.spagobi" additivity="false" level="error">
			<AppenderRef ref="KNOWAGE_META" />
		</logger>
		<logger name="it.eng.spagobi.commons.utilities.messages" additivity="false" level="error">
			<AppenderRef ref="KNOWAGE_META" />
		</logger>
		<logger name="it.eng.spagobi.commons.utilities.urls.WebUrlBuilder" additivity="false" level="error">
			<AppenderRef ref="KNOWAGE_META" />
		</logger>
		<logger name="velocity" additivity="false" level="error">
			<AppenderRef ref="KNOWAGE_META" />
		</logger>
		<Root level="error">
			<AppenderRef ref="KNOWAGE_META" />
		</Root>
	</Loggers>
</Configuration>